<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrea.littewhale.NavigationActivity$WeatherFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayoutWeatherOuter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/editTextDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Current date"
                android:textColor="@android:color/white"
                android:textSize="10pt" />

            <LinearLayout
                android:id="@+id/linearLayoutWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextCurWeatherIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="30pt" />


                <TableLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1,2,3">

                    <TableRow>

                        <TextView
                            android:id="@+id/editTextTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />

                        <TextView
                            android:id="@+id/editTextTemperatureValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="N/A"
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />

                        <TextView
                            android:id="@+id/editTextClouds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />

                        <TextView
                            android:id="@+id/editTextCloudsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="N/A"
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />
                    </TableRow>


                    <TableRow>

                        <TextView
                            android:id="@+id/editTextWindSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />


                        <TextView
                            android:id="@+id/editTextWindSpeedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="N/A"
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />

                        <TextView
                            android:id="@+id/editTextWindDir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />

                        <TextView
                            android:id="@+id/editTextWindDirValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="N/A"
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />


                    </TableRow>


                    <TableRow>

                        <TextView
                            android:id="@+id/editTextHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />


                        <TextView
                            android:id="@+id/editTextHumidityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="N/A"
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />

                        <TextView
                            android:id="@+id/editTextPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />

                        <TextView
                            android:id="@+id/editTextPressureValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="N/A"
                            android:textColor="@android:color/white"
                            android:textSize="10pt" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>



</RelativeLayout>
